<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen_chuyen_tiep"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:background="@drawable/header_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@mipmap/img" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <Button
            android:id="@+id/button"
            android:layout_width="141dp"
            android:layout_height="57dp"
            android:background="@drawable/button_n"
            android:text="Họ Và Tên:"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="237dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:text="Nguyễn Chí Hiếu"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button"
            tools:layout_editor_absoluteY="244dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/header2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/header1">
    <Button
        android:id="@+id/button1"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:background="@drawable/button_n"
        android:text="Lớp:"
        app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="63-CNTT-1"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="294dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/header3"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/header2">

        <Button
            android:id="@+id/button2"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/button_n"
            android:text="Mã Sinh Viên:"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="480dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="63134016"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="357dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/header4"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/header3">

        <Button
            android:id="@+id/button3"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/button_n"
            android:text="Ngày Sinh:"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:text="30/06/2003"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3"
            tools:layout_editor_absoluteY="417dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>